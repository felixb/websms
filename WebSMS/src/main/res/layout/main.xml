<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <de.ub0r.android.eucookieconsent.EuCookieConsentView
            android:id="@+id/cookie_consent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            app:urlLeanMore="@string/privacy_policy_url"/>

    <com.google.android.gms.ads.AdView
            android:id="@+id/ads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:adUnitId="ca-app-pub-1948477123608376/1827051680"
            app:adSize="SMART_BANNER"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_marginBottom="@dimen/activity_margin_vertical"
        android:layout_marginLeft="@dimen/activity_margin_horizontical"
        android:layout_marginRight="@dimen/activity_margin_horizontical"
        android:layout_marginTop="@dimen/activity_margin_vertical"
        android:layout_weight="1"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <MultiAutoCompleteTextView
                        android:id="@+id/to"
                        style="@style/TextAppearance.Multicomplete"
                        android:layout_width="fill_parent"
                        android:layout_height="51dip"
                        android:hint="@string/to_hint"
                        android:imeOptions="actionNext"
                        android:nextFocusDown="@+id/text"
                        android:nextFocusRight="@+id/text"
                        android:singleLine="true"
                        android:text="" />

                    <ImageButton
                        android:id="@+id/clear"
                        android:layout_width="42dip"
                        android:layout_height="42dip"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="4dip"
                        android:background="@android:drawable/btn_default_small"
                        android:focusable="true"
                        android:scaleType="fitXY"
                        android:src="@android:drawable/ic_menu_close_clear_cancel" />

                    <ImageButton
                        android:id="@+id/select"
                        android:layout_width="42dip"
                        android:layout_height="42dip"
                        android:layout_alignWithParentIfMissing="true"
                        android:layout_marginTop="4dip"
                        android:layout_toLeftOf="@+id/clear"
                        android:background="@android:drawable/btn_default_small"
                        android:focusable="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_menu_invite" />
                </RelativeLayout>

                <ImageButton
                    android:id="@+id/emo"
                    android:layout_width="51dip"
                    android:layout_height="51dip"
                    android:background="@android:drawable/btn_default_small"
                    android:focusable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_menu_emoticons" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:addStatesFromChildren="true" >

                <EditText
                    android:id="@+id/text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:autoText="true"
                    android:gravity="top"
                    android:hint="@string/text_hint"
                    android:imeOptions="actionDone|flagNoEnterAction"
                    android:inputType="textMultiLine|textAutoCorrect|textCapSentences"
                    android:minLines="3"
                    android:nextFocusRight="@+id/send_" />

                <TextView
                    android:id="@+id/text_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/text"
                    android:layout_alignParentRight="true"
                    android:background="#88000000"
                    android:paddingBottom="3dip"
                    android:paddingLeft="3dip"
                    android:paddingRight="3dip"
                    android:textColor="#ffffffff"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/text"
                    android:layout_alignParentLeft="true"
                    android:background="#88000000"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingBottom="3dip"
                    android:paddingLeft="3dip"
                    android:paddingRight="3dip"
                    android:text=" [x] "
                    android:textColor="#ffffffff"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_paste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/text"
                    android:layout_marginRight="2dip"
                    android:layout_toRightOf="@+id/text_clear"
                    android:background="#88000000"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingBottom="3dip"
                    android:paddingLeft="3dip"
                    android:paddingRight="3dip"
                    android:text="@string/paste_"
                    android:textColor="#ffffffff"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_connector"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignBottom="@id/text"
                    android:layout_alignTop="@id/text"
                    android:gravity="center"
                    android:textColor="#40606060"
                    android:textSize="40dip"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/extraButtons"
                style="@style/ButtonBar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0" >

                <ToggleButton
                    android:id="@+id/flashsms"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textOff="@string/flashsms"
                    android:textOn="@string/flashsms"
                    android:visibility="gone" />

                <ToggleButton
                    android:id="@+id/custom_sender"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textOff="@string/custom_sender"
                    android:textOn="@string/custom_sender"
                    android:visibility="gone" />

                <ToggleButton
                    android:id="@+id/send_later"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textOff="@string/send_later"
                    android:textOn="@string/send_later"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>